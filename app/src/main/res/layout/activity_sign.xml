<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/signactivity"
    tools:context="com.example.administrator.dancefun20.SignActivity">

    <EditText
        android:id="@+id/signN_edit"
        android:hint="name"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="110dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/signA_edit"
        android:hint="account"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="110dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/signP_edit"
        android:hint="password"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="429dp"
        android:layout_marginLeft="110dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/signtologbtn"
        android:layout_marginTop="640dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:alpha="0"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signedbtn"
        android:layout_marginTop="495dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:alpha="0"
        android:layout_height="60dp" />
</RelativeLayout>

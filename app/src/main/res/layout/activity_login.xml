<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:background="#ffffffff"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">
<androidx.percentlayout.widget.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.percentlayout.widget.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_marginTopPercent="10%"
    app:layout_heightPercent="70%"
    android:background="@drawable/login_activity">
    <EditText
        app:layout_marginLeftPercent="23%"
        app:layout_marginTopPercent="55%"
        android:id="@+id/account_Edit"
        android:textSize="21sp"
        android:hint="account"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/password_Edit"
        app:layout_marginTopPercent="64%"
        app:layout_marginLeftPercent="23%"

        android:textSize="21sp"
        android:hint="password"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />
    <ImageView
        android:id="@+id/tomenu_btn"
       android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="76%"
        android:background="@drawable/loginbtn"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="8%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>

</androidx.percentlayout.widget.PercentRelativeLayout>
<ImageView
    android:id="@+id/tosign_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_marginTopPercent="80%"
    android:src="@drawable/tosign_btn">

</ImageView>

</androidx.percentlayout.widget.PercentRelativeLayout>


</RelativeLayout>
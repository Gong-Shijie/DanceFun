<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffffff"
    android:layout_height="match_parent"
    tools:context=".view.AddLogActivity">
<androidx.percentlayout.widget.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/addlogtomenu"
        android:background="@drawable/ic_back"
        app:layout_marginTopPercent="4%"
        android:layout_marginLeft="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
    </Button>
    <Button
        android:id="@+id/logsendbtn"
        app:layout_marginTopPercent="16%"
        app:layout_marginLeftPercent="82%"
        android:background="@drawable/ic_send_email_2"
        android:layout_marginRight="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp">
    </Button>
    <ImageView
        android:id="@+id/addlog_head"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="17%"
        android:background="@drawable/addlog_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>
    <EditText
        android:id="@+id/editLogbtn"
        app:layout_marginTopPercent="24%"
        android:background="@null"
        android:layout_marginLeft="15dp"
        android:hint="记录今天的收获..."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/addLogPhotobtn"
        app:layout_heightPercent="16%"
        android:src="@drawable/addlog_addph"
        app:layout_widthPercent="35%"
        app:layout_marginTopPercent="49%"
      android:layout_marginLeft="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <ImageView
        android:id="@+id/addLogFea"
        app:layout_heightPercent="35%"
        android:layout_alignParentBottom="true"
        android:background="@drawable/addlog_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>

</androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
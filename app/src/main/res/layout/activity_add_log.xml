<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/addlog_activity"
    tools:context="com.example.administrator.dancefun20.AddLogActivity">
    <Button

        android:id="@+id/logsendbtn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:alpha="0"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="115dp" />
    <Button
        android:id="@+id/addlogtomenu"
        android:layout_width="50dp"
        android:alpha="0"
        android:layout_height="50dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/addLogPhotobtn"
        android:layout_marginTop="407dp"
        android:layout_width="150dp"
        android:alpha="0"
        android:layout_height="150dp" />

    <EditText
        android:background="@null"
        android:layout_below="@id/logsendbtn"
        android:layout_marginTop="25dp"

        android:id="@+id/editLogbtn"
        android:layout_marginLeft="15dp"
        android:hint="记录今天的收获..."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
